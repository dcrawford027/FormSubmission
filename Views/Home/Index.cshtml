@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="container">
    <h1>Enter your information</h1>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Create" asp-controller="Home" method="post">
                <span asp-validation-for="FirstName" style="color: red;"></span>
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="FirstName" class="form-control">
                    </div>
                </div>

                <span asp-validation-for="LastName" style="color: red;"></span>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LastName" class="form-control">
                    </div>
                </div>

                <span asp-validation-for="Age" style="color: red;"></span>
                <div class="form-group row">
                    <label asp-for="Age" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Age" class="form-control">
                    </div>
                </div>

                <span asp-validation-for="Email" style="color: red;"></span>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control">
                    </div>
                </div>

                <span asp-validation-for="Password" style="color: red;"></span>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control">
                    </div>
                </div>
                <input value="Submit" type="Submit" class="btn btn-success">
            </form>
        </div>
    </div>
</div>
